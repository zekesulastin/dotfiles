#/usr/bin/env bash

if [[ $HOSTNAME = "naiyuusei" ]]; then
	i3-msg exec "zekes-sensible-browser -f"
	i3-msg exec 'termite --role="hoshiakari" --exec="ssh hoshiakari"'
	i3-msg exec skype
	i3-msg exec 'termite --geometry=720x480 --role="mpdpopup" --exec="ssh hoshiakari -t 'LC_ALL=en_US.UTF-8 ncmpcpp' 2>/dev/null"'

	sleep 30

	i3-msg '[window_role="mpdpopup"] focus'
	i3-msg move scratchpad
	i3-msg '[class="Firefox"] focus'
	i3-msg move left
	i3-msg move left
	i3-msg resize grow width 5 px or 5 ppt
	i3-msg '[window_role="hoshiakari"] focus'
	i3-msg move right
	i3-msg move right
	i3-msg split vertical
	i3-msg '[class="Skype"] focus'
	i3-msg move right
	i3-msg '[window_role="hoshiakari"] focus'
	i3-msg resize grow height 5 px or 5 ppt
	i3-msg '[class="Firefox"] focus'
fi

if [[ $HOSTNAME = "tsukikage" ]]; then
	local __xrandr=$(xrandr)
	if echo $__xrandr | grep -q "HDMI1 connected"; then
		i3-msg exec 'xrandr --output HDMI1 --right-of eDP1 --primary'
	fi
fi

	numlockx &

	i3-msg workspace 6
	i3-msg append_layout /home/zekesulastin/.config/i3/workspace-6
	i3-msg workspace 1
	i3-msg append_layout /home/zekesulastin/.config/i3/workspace-1
	i3-msg exec 'nitrogen --restore'

	i3-msg exec 'zekes-sensible-browser -f'
	i3-msg exec 'termite --role="initial"'
	i3-msg exec pavucontrol
	i3-msg exec teamspeak3
	i3-msg exec 'pkill pavucontrol'
	i3-msg exec 'termite --role="naiyuusei" --exec="ssh naiyuusei"'
	i3-msg exec skype
	i3-msg '[Class="Firefox"] focus'
fi
