# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
# vim:fdm=marker

# {{{ Variable Definition
set $mod Mod4
set $blue	#3465A4
set $dblue	#0a2a4a
set $dgrey  #161616
set $grey	#2E3436
set $bgrey	#555753
set $black	#000000
set $white	#ffffff
set $red	#cc0000
# }}}
# {{{ Font and Theming
font -*-tamzenpl-medium-r-*-*-14-*-*-*-*-*-*-*
#font xft:PragmataPro 8

# Border style
new_window 1pixel

# Client colors			border	backgr.	text	indicator
#client.focused			$dblue	$dblue	$bgrey	$blue 
#client.focused_inactive	$grey	$grey	$bgrey	$grey
#client.unfocused		$dgrey	$dgrey	$bgrey	$bgrey
#client.urgent			$red	$red	$white	$white
# }}}
# {{{ Window Manipulation
floating_modifier $mod

bindsym $mod+Shift+Q kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

bindsym $mod+g split h

bindsym $mod+v split v

bindsym $mod+f fullscreen

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

bindsym $mod+Shift+exclam move container to workspace 1
bindsym $mod+Shift+at move container to workspace 2
bindsym $mod+Shift+numbersign move container to workspace 3
bindsym $mod+Shift+dollar move container to workspace 4
bindsym $mod+Shift+percent move container to workspace 5
bindsym $mod+Shift+asciicircum move container to workspace 6
bindsym $mod+Shift+ampersand move container to workspace 7
bindsym $mod+Shift+asterisk move container to workspace 8
bindsym $mod+Shift+parenleft move container to workspace 9
bindsym $mod+Shift+parenright move container to workspace 10

bindsym $mod+Shift+C reload
bindsym $mod+Shift+R restart
bindsym $mod+Shift+E exit

mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"
# }}}
# {{{ Status Bar
bar {
	status_command conkyi3bar
	tray_output DVI-D-0
	position top
#	font xft:PragmataPro for Powerline 8
	font -*-tamzenpl-medium-r-*-*-14-*-*-*-*-*-*-*
	colors {
		background $black
		statusline $bgrey
		
		# Workspace colors	Border	Backgd	Text	
#		focused_workspace	$dblue	$dblue	$bgrey
#		active_workspace	$grey	$grey	$bgrey
#		inactive_workspace	$dgrey	$dgrey	$bgrey
#		urgent_workspace	$red	$red	$white
	}
}
# }}}
# {{{ Program Keybinds
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+d exec "dmenu_run -p 'Run:' -fn -*-tamzenpl-medium-r-*-*-14-*-*-*-*-*-*-*"

bindsym $mod+F2 exec "xlock"

bindsym $mod+Ctrl+w exec browser-with-fortune

bindsym $mod+Up exec "mpc stop"
bindsym $mod+Down exec "mpc toggle"
bindsym $mod+Left exec "mpc prev"
bindsym $mod+Right exec "mpc next"

bindsym $mod+Ctrl+v exec pavucontrol
bindsym XF86AudioRaiseVolume exec "ponymix increase 4 > /tmp/pvu.zekesulastin && ponymix unmute"
bindsym XF86AudioLowerVolume exec "ponymix decrease 4 > /tmp/pvu.zekesulastin && ponymix unmute"
bindsym XF86AudioMute exec "ponymix toggle > /tmp/pvu.zekesulastin"

bindsym XF86Sleep exec "systemctl suspend"
# }}}
# {{{ Window Rules
for_window [class="Wine"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="Nvidia-settings"] floating enable
for_window [class="Nitrogen"] floating enable
for_window [title="Firefox Preferences"] floating enable
for_window [title="Saved Passwords"] floating enable
for_window [class="Download"] floating enable
for_window [class="Steam"] floating enable
for_window [class="Pcsx2"] floating enable
for_window [title="Download"] floating enable
# }}}
