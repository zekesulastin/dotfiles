#!/usr/bin/env bash

_fortune=`fortune -a`

cat << EOF > /tmp/fortune_page.html
<html>
<head>
	<style media="screen" type="text/css">
		body {
			position: absolute;
			top: 35%;
			left: 10%;
			right: 10%;
			font-family: PragmataPro,monospace;
			color:#aaaaaa;
			background-color:#1a1a1a;
		}
	</style>
<body>
$_fortune
</body>
</html>
EOF

exec firefox /tmp/fortune_page.html
